#Ejercicio2
i = 1
cond = True
a = 0
mayor = 0
menor = 0
while cond:
    a = int(input("Número " + str(i) + "= "))
    if a >= 0:
        if a > 0:
            if a > mayor:
                mayor = a
            if a < menor or i == 1:
                menor = a
            i += 1
        else:
            print("Saldremos del ciclo While.")
            cond = False
    else:
        print("Número inválido")
print("El número MAYOR es el " + str(mayor))
print("El número MENOR es el " + str(menor))
