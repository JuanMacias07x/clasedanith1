#Ejercicio1
i = 1
cond = True
suma = 0
prom = 0
while cond:
    numero = int(input("NÃºmero " + str(i) + "= "))
    if numero != 0:
        suma = suma + numero
        i += 1
    else:
        print("Saldremos del ciclo While.")
        break
#Imprimir datos de salida
print("Sumatoria=" + str(suma))
i -= 1
prom = suma / i
print("Promedio=" + str(prom))
print("Valores digitados=" + str(i))
